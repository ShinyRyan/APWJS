extends layout 

block content 
    body
        h2 Feel Free to Submit a Hint For an Existing Word

        form(method="POST")
            p 
                |Word: 
                input(name="word" value='')
                br
                |Hint for Existing Word: 
                input(name="hint" value='')
                br
                input(type="submit" value="Send!")
                input(type="reset" value="Clear!")
        if msg 
            h3 #{msg}
        br
        //By Ryan McConnell